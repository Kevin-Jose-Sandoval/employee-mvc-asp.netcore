@model EmployeeApp.Models.ViewModels.EmployeeVM

@{
    ViewData["Title"] = "EmployeeDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center flex-column">
    @if (Model.EmployeeObject.EmployeeId == 0)
    {
        <h1>Create employee</h1>
    } 
    else {
        <h1>Edit employee</h1>
    }

    <div class="row w-50">
            <form asp-action="EmployeeDetail" asp-controller="Home" method="post">
                <input type="hidden" asp-for="EmployeeObject.EmployeeId" />

                <div class="mb-2">
                    <label class="form-label" asp-for="EmployeeObject.Fullname">Fullname</label>
                    <input class="form-control form-control-sm" asp-for="EmployeeObject.Fullname" type="text"/>
                </div>

                <div class="mb-2">
                    <label class="form-label" asp-for="EmployeeObject.Email">Email</label>
                    <input class="form-control form-control-sm" asp-for="EmployeeObject.Email" type="text" />
                </div>

                <div class="mb-2">
                    <label class="form-label" asp-for="EmployeeObject.Phone">Phone</label>
                    <input class="form-control form-control-sm" asp-for="EmployeeObject.Phone" type="text" />
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="EmployeeObject.PositionId">Position</label>
                    <select class="form-select form-select-sm" asp-for="EmployeeObject.PositionId" asp-items="@Model.PositionListObject">
                        <option selected disabled>Select</option>
                    </select>
                </div>

                <div class="mb-2">
                    @if (Model.EmployeeObject.EmployeeId == 0)
                    {
                        <button class="btn btn-success btn-sm" type="submit"><i class="bi bi-check-lg"></i> Create</button>
                    }
                    else
                    {
                        <button class="btn btn-success btn-sm" type="submit"><i class="bi bi-check-lg"></i> Update</button>
                    }
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btn-sm">
                        <i class="bi bi-arrow-return-left"></i> Back to list
                    </a>
                </div>
            </form>
    </div>
</div>