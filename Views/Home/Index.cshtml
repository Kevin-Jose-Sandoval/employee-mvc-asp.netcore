@model List<EmployeeApp.Models.Employee>

@{
    ViewData["Title"] = "Home Page";
}

<div class="card">
    <div class="card-header">
        <h5>Employee list</h5>
    </div>
    <div class="card-body">
        <a asp-action="EmployeeDetail" asp-controller="Home" asp-route-employeeId="0" class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle"></i> Create new
        </a>
        <hr />

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Fullname</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Position</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Fullname</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.PositionObject.Description</td>
                        <td>
                            <a asp-action="EmployeeDetail" asp-controller="Home" asp-route-employeeId="@item.EmployeeId" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pen"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-controller="Home" asp-route-employeeId="@item.EmployeeId" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash3"></i> Delete
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
